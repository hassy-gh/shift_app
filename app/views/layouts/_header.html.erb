<header>
  <div class="container">
    <%= link_to "ShiftApp", root_path, id: "logo" %>
    <nav>
      <ul class="nav">
        <% if logged_in? %>
          <li><%= link_to current_user.name, user_path(current_user) %></li>
          <li class="dropdown">
            <a href="#">
              メニュー
            </a>
            <ul class="dropdown-menu">
              <% if current_user.admin? %>
                <li><%= link_to "メンバー", users_path %></li>
                <li><%= link_to "シフト作成", fixed_shifts_path %></li>
              <% end %>
              <li><%= link_to "シフト申請", hope_shifts_path %></li>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "新規登録", signup_path %></li>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>