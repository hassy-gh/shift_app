<%= form_with(model: @hope_shift, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :start_time, "日付" %>
  <%= f.date_field :start_time, class: "form-control", value: @day %>
  
  <%= f.label :content, "Free or Absence" %>
  <%= f.select :content, { "F": "F", "×": "×"}, { include_blank: "選択ボックス" } %>

  <%= f.label :hope_start_time, "開始時間" %>
  <%= f.time_select :hope_start_time, minute_step: 5, class: "form-control", prompt: "--" %>
  
  <%= f.label :hope_end_time, "終了時間" %>
  <%= f.time_select :hope_end_time, minute_step: 5, class: "form-control", prompt: "--" %>
  
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>