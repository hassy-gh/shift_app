<%= form_with(model: @hope_shift, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :start_time, "日付" %>
  <%= f.date_field :start_time, { class: "form-control", value: @day } %>
  
  <%= f.label :content, "Free or Absence" %>
  <%= f.select :content, { "F": "F", "×": "×"}, { include_blank: true }, { class: "form-control" } %>

  <%= f.label :hope_start_time, "開始時間" %>
  <%= f.select :hope_start_time, { "09:30": "09:30", "17:00": "17:00" }, { include_blank: true }, { class: "form-control" } %>
  
  <%= f.label :hope_end_time, "終了時間" %>
  <%= f.select :hope_end_time, { "17:00": "17:00", "22:00": "22:00" }, { include_blank: true }, { class: "form-control" } %>
  
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>