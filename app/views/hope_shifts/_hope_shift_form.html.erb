<%= form_with(model: @hope_shift, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.hidden_field :start_time, value: @day %>
  
  <p class="text-secondary">F or ×で選択</p>
  <%= f.label :content, "F or ×" %>
  <%= f.select :content, { "F": "F", "×": "×"}, { include_blank: true }, { class: "form-control" } %>

  <p class="text-secondary mt-5">時間で選択(どちらかのみでも可)</p>
  <%= f.label :hope_start_time, "開始時間" %>
  <div class="form-inline">
    <%= f.time_select :hope_start_time, { include_blank: true, ignore_date: true, minute_step: 5 }, { class: "form-control col-5" } %>
  </div>
  

  <%= f.label :hope_end_time, "終了時間" %>
  <div class="form-inline">
    <%= f.time_select :hope_end_time, { include_blank: true, ignore_date: true, minute_step: 5 }, { class: "form-control col-5" } %>
  </div>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>