<%= form_with(model: @hope_shift, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :start_time, "日付" %>
  <%= f.date_field :start_time, { class: "form-control", value: @day } %>
  
  <%= f.label :content, "F or ×" %>
  <%= f.select :content, { "F": "F", "×": "×"}, { include_blank: true }, { class: "form-control" } %>

  <%= f.label :hope_start_time, "開始時間" %>
  <%= f.time_select :hope_start_time, { include_blank: true, ignore_date: true, minute_step: 5 }, { class: "form-control" } %>
  
  <%= f.label :hope_end_time, "終了時間" %>
  <%= f.time_select :hope_end_time, { include_blank: true, ignore_date: true, minute_step: 5 }, { class: "form-control" } %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>