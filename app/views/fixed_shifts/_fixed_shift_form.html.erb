<%= form_with(model: @form, url: fixed_shifts_path, local: true, method: :post) do |f| %>
  <%= f.fields_for :fixed_shifts do |i| %>
    <%= render 'shared/error_messages', object: i.object %>
    

      <%= i.hidden_field :start_time, value: @day %>

      <%= i.label :user_id, "従業員" %>
      <%= i.select :user_id, @hope_shifts.all.collect{ |h| [h.user.name, h.user.id] }, { prompt: "従業員を選んでください" }, { class: "form-control" } %>

      <%= i.label :fixed_start_time, "開始時間" %>
      <%= i.time_select :fixed_start_time, { include_blank: true, ignore_date: true, minute_step: 5 }, { class: "form-control" } %>
    
      <%= i.label :fixed_end_time, "終了時間" %>
      <%= i.time_select :fixed_end_time, { include_blank: true, ignore_date: true, minute_step: 5 }, { class: "form-control" } %>
    
  <% end %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
