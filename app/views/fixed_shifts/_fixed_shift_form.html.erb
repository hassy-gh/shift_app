<%= form_with(model: @fixed_shift, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <h3><%= @day %></h3>
  <%= f.hidden_field :start_time, value: @day %>
  
  <%= f.hidden_field :user_id, value: @user %>

  <%= f.label :absence, "欠勤", class: "mt-3" %>
  <%= f.check_box :absence %><br>

  <%= f.label :fixed_start_time, "開始時間", class: "mt-3" %>
  <div class="form-inline">
    <%= f.time_select :fixed_start_time, { include_blank: true, ignore_date: true, minute_step: 5 }, { class: "form-control col-5" } %>
  </div>
  
  <%= f.label :fixed_end_time, "終了時間" %>
  <div class="form-inline">
    <%= f.time_select :fixed_end_time, { include_blank: true, ignore_date: true, minute_step: 5 }, { class: "form-control col-5" } %>
  </div>
    
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
